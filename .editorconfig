root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace=true

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{org,norg}]
indent_style = space
indent_size = 2
max_line_length = 88

[*.{md,qmd}]
indent_style = space
indent_size = 2
max_line_length = 88

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 80

[*.rs]
indent_style = unset
indent_size = unset
max_line_length = unset

[*.cpp]
indent_style = unset
indent_size = unset
max_line_length = unset

